<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
    <div class="container">
        <h1>Super Admin Dashboard</h1>
        <h2>Add Hospital Admin</h2>
        <form action="/addAdmin" method="POST">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="text" name="hospital" placeholder="Hospital" required>
            <select name="subscription">
                <option value="Active">Subscription Active</option>
                <option value="Inactive">Subscription Inactive</option>
            </select>
            <button type="submit">Add Hospital Admin</button>
        </form>
        <h2>List of Hospital Admins</h2>
        <table>
            <tr>
                <th>Username</th>
                <th>Hospital</th>
                <th>Subscription</th>
                <th>Actions</th>
            </tr>
            <% admins.forEach(admin => { %>
            <tr>
                <td><%= admin.username %></td>
                <td><%= admin.hospital %></td>
                <!-- Apply class based on subscription status -->
                <td class="<%= admin.subscription.toLowerCase() %>"><%= admin.subscription %></td>
                <td>
                    <!-- Edit button -->
                    <a href="/editAdmin/<%= admin._id %>"><button class="edit-btn">Edit</button></a>
                    <!-- Delete button -->
                    <form action="/deleteAdmin/<%= admin._id %>" method="POST">
                        <button type="submit" class="delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
    <script src="/scripts/main.js" type="text/javascript"></script>
</body>

</html>
