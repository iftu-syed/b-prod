<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Login</title>
    <link rel="stylesheet" href="/dataentrylogin.css">
</head>
<body>
    <div><h1><span style="font-weight: normal;">Welcome,</span> Staff.</h1></div>
    <div class="login-container">
        <form action="/login" method="POST">
            <hr class="spacer">
            <img src="/assets/images/logo.png">
            <hr class="spacer">
            <input type="text" name="username" placeholder="Enter your username" required>
            <input type="password" name="password" placeholder="Enter your password" required>

            <!-- Flash Message Section -->
            <% if (errorMessage) { %>
                <div class="flash-message error"><%= errorMessage %></div>
            <% } %>

            <button type="submit" class="lgbtn">Login</button>
            <hr class="spacer">
        </form>
    </div>
    <hr class="spacer">
    <div style="display: flex; justify-content: space-around;"><h1>Let's power up with PROMs</h1></div>
    <hr class="spacer">
    <hr class="spacer">
    <div style="display: flex; justify-content: space-around; color: grey;">© WeHealthify · Contact · Privacy Policy</div>

    <!-- JavaScript to hide flash messages after 3 seconds -->
    <script>
        setTimeout(function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(function(flash) {
                flash.style.transition = 'opacity 1s ease-out';
                flash.style.opacity = '0';
                setTimeout(() => flash.remove(), 1000); // Remove element after fade-out
            });
        }, 3000); // 3 seconds before fading out
    </script>
</body>
</html>
