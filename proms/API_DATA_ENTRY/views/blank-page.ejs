    /* tool tip styles */

.introjs-tooltipbuttons {
text-align: right; /* Align buttons to the right */

}

.help-btn {
background-color: #007BFF;
color: white;
border: none;
border-radius: 5px;
padding: 10px 15px;
cursor: pointer;
font-size: 16px;
margin: 0px !important;
transition: background-color 0.3s ease;
}

