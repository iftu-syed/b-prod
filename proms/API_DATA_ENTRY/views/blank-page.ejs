        <p class="bold"><%= doctor.hospitalName %></p><!-- Updated here -->
        <p class="bold"><%= doctor.site_code %></p>   <!-- Updated here -->
    </div>
    <ul>
        <li>
            <a href="<%= basePath %>/blank-page">
                <i class="bx bxs-grid-alt"></i>
