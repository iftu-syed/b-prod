  /* Initially hidden */
  opacity: 0;
  visibility: hidden;
  
  /* Smooth transition */
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

/* Show the dropdown on hover */
#specialityHeader:hover #specialityDropdown {
