    .then(response => response.json())
    .then(providerData => {
      const nameSelect = $('#primary_provider_name');
      const codeSelect = $('#primary_provider_code');

      // Initialize Select2 for name
      nameSelect.select2({
        placeholder: "Select Provider Name",
        width: '100%'
      });

      // Just show code without enabling dropdown
      codeSelect.select2({
        placeholder: "Select Provider Code",
        width: '100%',
        minimumResultsForSearch: Infinity // hides search box
      });

      // Populate only name dropdown
      providerData.forEach(p => {
        nameSelect.append(new Option(p.primary_provider_name, p.primary_provider_name, false, false));
      });

      nameSelect.trigger('change.select2');

      // Name → Code sync
      nameSelect.on('change', function () {
        const selectedName = $(this).val();
        const match = providerData.find(p => p.primary_provider_name === selectedName);
        if (match) {
          codeSelect.html(''); // clear and update code dropdown
          codeSelect.append(new Option(match.primary_provider_code, match.primary_provider_code, true, true));
          codeSelect.trigger('change.select2');
        }
      });
    })
    .catch(error => console.error("❌ Failed to load providers.json", error));
});
</script>


