<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Entry Form</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Correct the path to your CSS file -->
    <script>
        window.onload = function() {
            // Set minimum value for date of surgery to current date
            var currentDate = new Date();
            var formattedDate = currentDate.toISOString().split('T')[0]; // Format the date
            document.getElementById('dateOfSurgery').min = formattedDate;

            var now = new Date();
            var minutes = now.getMinutes();
            var nearest15Minutes = Math.ceil(minutes / 15) * 15;
            var nearestMinute = nearest15Minutes % 60; // Get nearest minute within an hour

            // Set nearest minute within an hour to 15, 30, 45, or 0
            if (nearestMinute >= 0 && nearestMinute < 15) {
                nearestMinute = 15;
            } else if (nearestMinute >= 15 && nearestMinute < 30) {
                nearestMinute = 30;
            } else if (nearestMinute >= 30 && nearestMinute < 45) {
                nearestMinute = 45;
            } else {
                nearestMinute = 0;
            }

            now.setMinutes(nearestMinute);
            var formattedTime = now.toISOString().slice(0, -8); // Format the date and time

            document.getElementById('datetime').min = formattedTime; // Set min attribute for datetime input

            // Adjust datetime-local input step to 15 minutes
            var datetimeInput = document.getElementById('datetime');
            datetimeInput.step = 900; // 15 minutes in seconds

            // Validate form submission
            document.getElementById('dataForm').addEventListener('submit', function(event) {
                var selectedDateTime = new Date(datetimeInput.value);
                var selectedMinutes = selectedDateTime.getMinutes();
                if (selectedMinutes % 15 !== 0) {
                    event.preventDefault();
                    alert('Please select an appointment time in 15-minute intervals.');
                } else {
                    // Show confirmation message
                    document.getElementById('confirmationMessage').style.display = 'block';
                    // Redirect after 3 seconds
                    setTimeout(function() {
                        window.location.href = '/';
                    }, 3000);
                }
            });
        };
    </script>
</head>
<body>
    <h1>Data Entry Form</h1>
    <form id="dataForm" method="POST" action="/api/data"> <!-- Use POST method and specify action -->
        <label for="Mr_no">MR Number:</label>
        <input type="text" id="Mr_no" name="Mr_no" required><br><br>
        
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" required><br><br>
        
        <label for="DOB">Date of Birth:</label>
        <input type="date" id="DOB" name="DOB" required><br><br>

        <label for="datetime">Appointment Date and Time:</label>
        <input type="datetime-local" id="datetime" name="datetime" required><br><br>

