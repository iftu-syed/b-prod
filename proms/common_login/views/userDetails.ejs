<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Details</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        .user-details-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #333333;
            text-align: center;
            margin-bottom: 20px;
        }
        p {
            font-size: 16px;
            margin-bottom: 10px;
        }
        .survey-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: space-between;
        }
        .survey-button {
            flex: 1 1 calc(50% - 10px);
            padding: 10px;
            background-color: #28a745;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
        }
        .survey-button:hover {
            background-color: #218838;
        }
        .logout-button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #dc3545;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
        }
        .logout-button:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="user-details-container">
        <h2>Patient Details</h2>
        <p><strong>MR_no:</strong> <%= user.Mr_no %></p>
        <p><strong>Name:</strong> <%= user.Name %></p>
        <p><strong>DOB:</strong> <%= user.DOB %></p>
        <p><strong>datetime:</strong> <%= user.datetime %></p>
        <p><strong>speciality:</strong> <%= user.speciality %></p>
        <p><strong>dateOfSurgery:</strong> <%= user.dateOfSurgery %></p>
        <p><strong>phoneNumber:</strong> <%= user.phoneNumber %></p>

        <% if (surveyName.length > 0) { %>
            <p><strong>PROMs:</strong></p>
            <ul>
                <% surveyName.forEach(function(name) { %>
                    <% if (name === 'Wexner') { %>
                        <li>Assessment of incontinence to stools in pregnancy (Wexner)</li>
                    <% } else if (name === 'ICIQ-UI SF') { %>
                        <li>Assessment of urinary incontinence in pregnancy (ICIQ-UI SF)</li>
                    <% } else if (name === 'EPDS') { %>
                        <li>Mental Health Resilience post pregnancy survey (EPDS)</li>
                    <% } else if (name === 'PAID') { %>
                        <li>Assessment for Diabetes Care (PAID)</li>
                    <% } else if (name === 'PROMIS-10') { %>
                        <li>Global health (PROMIS-10)</li>
                    <% } else if (name === 'PBQ') { %>
                        <li>Assessment of participation in hand injury patients (PBQ)</li>
                    <% } else { %>
                        <li><%= name %></li>
                    <% } %>
                <% }); %>
            </ul>
            
            <div class="survey-buttons">
                <% surveyName.forEach(function(name) { %>
                    <form action="/generateGraph" method="POST" style="margin-bottom: 10px;">
                        <input type="hidden" name="Mr_no" value="<%= user.Mr_no %>">
                        <input type="hidden" name="password" value="<%= user.password %>">
                        <input type="hidden" name="surveyType" value="<%= name === 'Assessment of urinary incontinence in pregnancy (ICIQ-UI SF)' ? 'CCFFIS' : name %>">
                        <button type="submit" class="survey-button">
                            <%= name %>
                        </button>
                    </form>
                <% }); %>
            </div>
        <% } else { %>
            <p><strong>No surveys available for this speciality.</strong></p>
        <% } %>

        <br><br>
        <!-- Logout form -->
        <form action="/logout" method="POST">
            <button type="submit" class="logout-button">Logout</button>
        </form>
    </div>
</body>
</html>
