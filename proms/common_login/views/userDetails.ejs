<script>
    // --- SCRIPT FOR EQ-5D VAS CHART (Individual Scales Version) ---
    function drawVasChart(vasData, containerSelector) {
        // Pre-condition: vasData is guaranteed to be an array with length > 0 by the caller.
        // If not, this function shouldn't have been called.

        const container = d3.select(containerSelector);
        container.html(''); // Clear previous content (e.g., loading message)

        container.append("h3")
            .attr("class", "vas-chart-title")
            .text("EQ-5D VAS Score");

        const margin = { top: 30, right: 40, bottom: 60, left: 40 };
        const instanceWidth = 150;
        // svgNominalWidth calculation assumes vasData.length > 0
        const svgNominalWidth = vasData.length * instanceWidth;
        const svgNominalHeight = 400;

        const chartWidth = svgNominalWidth;
        const chartHeight = svgNominalHeight;

        const svgWidth = chartWidth + margin.left + margin.right;
        const svgHeight = chartHeight + margin.top + margin.bottom;

        const svg = container.append("svg")
            .attr("width", svgWidth)
            .attr("height", svgHeight)
            .attr("class", "vas-chart-svg")
            .append("g")
            .attr("transform", `translate(${margin.left},${margin.top})`);

        const yScale = d3.scaleLinear()
            .domain([0, 100])
            .range([chartHeight, 0]);

        const instanceNumbers = vasData.map(d => d.instance);
        const xScale = d3.scalePoint()
            .domain(instanceNumbers) // Assumes instanceNumbers is not empty
            .range([0, chartWidth])
            .padding(instanceWidth / (chartWidth / instanceNumbers.length) * 0.5 );

        const xAxis = d3.axisBottom(xScale).tickFormat(d => `${d}`);
         svg.append("g")
            .attr("class", "vas-x-axis")
            .attr("transform", `translate(0, ${chartHeight})`)
            .call(xAxis);

        svg.append("text")
           .attr("class", "vas-x-axis-label")
           .attr("x", chartWidth / 2)
           .attr("y", chartHeight + margin.bottom - 15)
           .text("Assessment Instance");

        // This 'if' block is technically redundant if the caller ensures vasData.length > 0
        // However, keeping it makes drawVasChart more robust if called directly with potentially empty data.
        // For strict adherence to "don't draw if no data", the caller (DOMContentLoaded) is the primary gatekeeper.
        // if (vasData.length > 0) { // This check can be removed if caller guarantees non-empty vasData
            const dataInstances = svg.selectAll(".vas-instance-group")
                .data(vasData)
                .enter()
                .append("g")
                .attr("class", "vas-instance-group")
                .attr("transform", d => `translate(${xScale(d.instance)}, 0)`);

            dataInstances.each(function(d_instance) {
                const individualScaleGroup = d3.select(this);
                const scaleXPosition = 0;

                individualScaleGroup.append("line")
                    .attr("class", "vas-scale-line")
                    .attr("x1", scaleXPosition)
                    .attr("x2", scaleXPosition)
                    .attr("y1", yScale(0))
                    .attr("y2", yScale(100));

                const vasTickValues = d3.range(0, 101, 10);
                vasTickValues.forEach(val => {
                    const isMajorTick = val % 10 === 0;
                    const tickLength = 8;
                    individualScaleGroup.append("line")
                        .attr("class", "vas-major-tick-line")
                        .attr("x1", scaleXPosition - tickLength / 2)
                        .attr("x2", scaleXPosition + tickLength / 2)
                        .attr("y1", yScale(val))
                        .attr("y2", yScale(val));

                    if (isMajorTick) {
                        individualScaleGroup.append("text")
                            .attr("class", "vas-tick-label")
                            .style("font-size", "9px")
                            .attr("x", scaleXPosition - (tickLength / 2) - 4)
                            .attr("y", yScale(val))
                            .attr("dy", "0.32em")
                            .text(val);
                    }
                });

                individualScaleGroup.append("text")
                    .attr("class", "vas-description-label")
                    .style("font-size", "8px")
                    .attr("x", scaleXPosition)
                    .attr("y", yScale(100) - 8)
                    .selectAll("tspan")
                    .data(["Best", "health"])
                    .enter().append("tspan")
                        .attr("x", scaleXPosition)
                        .attr("dy", (d,i) => i * 9)
                        .text(d_text => d_text);

                individualScaleGroup.append("text")
                    .attr("class", "vas-description-label")
                     .style("font-size", "8px")
                    .attr("x", scaleXPosition)
                    .attr("y", yScale(0) + 8)
                    .selectAll("tspan")
                    .data(["Worst", "health"])
                    .enter().append("tspan")
                        .attr("x", scaleXPosition)
                        .attr("dy", (d,i) => i * 9)
                        .text(d_text => d_text);

                individualScaleGroup.append("circle")
                    .attr("class", "vas-data-point")
                    .attr("cx", scaleXPosition)
                    .attr("cy", yScale(d_instance.vasScore))
                    .attr("r", 7);

                individualScaleGroup.append("text")
                    .attr("class", "vas-data-label")
                    .attr("x", scaleXPosition + 15)
                    .attr("y", yScale(d_instance.vasScore))
                    .attr("dy", "0.32em")
                    .text(d_instance.vasScore);
            });
        // }
        // The 'else' block that drew "No VAS data available." inside the SVG is removed.
        // The caller now handles this by not calling drawVasChart or by clearing the container.
    }

   document.addEventListener("DOMContentLoaded", () => {
