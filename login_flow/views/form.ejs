  <link rel="stylesheet" href="/styles/styles1.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      background-color: #f0f0f0;
      margin: 0;
    }

    .lang-toggle {
      position: absolute;
      top: 10px;
      right: 10px;
      padding: 10px;
      cursor: pointer;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
      margin-bottom: 20px;
      font-size: 24px;
    }

    .progress-bar {
      width: 90%;
      background-color: #e0e0e0;
      border-radius: 5px;
      margin-bottom: 20px;
      height: 20px;
      overflow: hidden;
    }

    .progress {
      height: 100%;
      background-color: #007bff;
      border-radius: 5px;
      width: 0;
      transition: width 0.4s ease;
    }

    .question-container {
      display: none;
      background-color: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 600px;
      text-align: left;
      margin-bottom: 20px;
    }

    .question-container.active {
      display: block;
    }

    .nav-buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }

    .nav-buttons button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background-color: #007bff;
      color: white;
      transition: background-color 0.3s;
    }

    .nav-buttons button:hover {
      background-color: #0056b3;
    }

    .legend {
      margin-top: 20px;
      text-align: left;
    }

    .legend h2 {
      margin-bottom: 10px;
    }

    .legend ul {
      list-style-type: none;
      padding: 0;
    }

    .legend li {
      margin-bottom: 5px;
    }

    @media (max-width: 600px) {
      .question-container {
        width: 95%;
      }

      .progress-bar {
        width: 95%;
      }

      .nav-buttons button {
        width: 100%;
        margin-top: 10px;
      }
    }
    .question-container.error {
  border: 2px solid red;
}

.error-message {
  color: red;
  font-size: 14px;
  margin-top: 10px;
}
  </style>
</head>
