                    <!-- Add more options as needed -->
                <!-- </select> -->

                    <!-- <input type="text" id="specialty" name="specialty" value="<%= survey.specialty %>" required> -->
                
            <!-- </div> -->
            <div class="form-group">
                <label for="specialty">Providers Specialty:</label>
                <select id="specialty" name="specialty" required>
                    <% specialties.forEach(specialty => { %>
                        <option value="<%= specialty %>" <%= survey.specialty === specialty ? 'selected' : '' %>><%= specialty %></option>
                    <% }); %>
                </select>
            </div>

            <div class="form-group">
                <label>Survey Names:</label>
                <% surveys.forEach(surveyItem => { %>
                    <div class="checkbox">
                        <input type="checkbox" id="<%= surveyItem.surveyName %>" name="surveyNames" value="<%= surveyItem.surveyName %>" <%= survey.surveyName && survey.surveyName.includes(surveyItem.surveyName) ? 'checked' : '' %>>
                        <label for="<%= surveyItem.surveyName %>"><%= surveyItem.surveyName %></label>
                    </div>
                <% }); %>
            </div>
            <button type="submit">Save Changes</button>
        </form>
        <form action="/delete/<%= survey._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this survey?');">
            <button type="submit" style="background-color: red; color: white;">Delete Survey</button>
        </form>
        <a href="/">Back to Home</a>
    </div>
</body>
</html>
