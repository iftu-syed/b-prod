                    <option value="Cardiology" <%= survey.specialty === 'Cardiology' ? 'selected' : '' %>>Cardiology</option>
                    <option value="Orthopedics" <%= survey.specialty === 'Orthopedics' ? 'selected' : '' %>>Orthopedics</option>
                    <option value="Pediatrics" <%= survey.specialty === 'Pediatrics' ? 'selected' : '' %>>Pediatrics</option>
                    <option value="Dermatology" <%= survey.specialty === 'Dermatology' ? 'selected' : '' %>>Dermatology</option>
