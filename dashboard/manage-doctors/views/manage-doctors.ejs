            </li>
        </ul>
    </div>

    <div class="main-content">
        <div class="topbar">
            <h1>Welcome, Hospital Admin</h1>
        </div>

        <hr>
<div class="tables-container" style="display: flex; justify-content: space-between;">
    <div class="column1">
        <div class="table-container">
            <br><h2>Manage Providers</h2><br>
            <form action="/doctors" method="POST">
                <!-- Replace the single name input with firstName and lastName -->
                <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
                <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>

                <label for="speciality">Speciality:</label>
                <select id="speciality" name="speciality" aria-placeholder="Speciality/Department" required>
                    <% specialities.forEach(speciality => { %>
                        <option value="<%= speciality %>"><%= speciality %></option>
                    <% }); %>
                </select>
                <button type="submit"><i class='bx bx-user-check' ></i> Add Provider</button>
            </form>
            <hr class="spacer">
            <hr>
            <hr class="spacer">
            <table>
                <tr>
                    <th>Doctor</th>
                    <th>Username</th>
                    <th>Speciality</th>
                    <th>List of Surveys</th>
                    <th>Action</th>
                </tr>
                <% doctors.forEach(doctor => { %>
                    <tr>
                        <!-- Replace doctor.name with doctor.firstName + ' ' + doctor.lastName -->
                        <td><%= doctor.firstName + ' ' + doctor.lastName %></td>
                        <td><%= doctor.username %></td>
                        <td><%= doctor.speciality %></td>
                        <td>
                            <ul style="list-style-type: none; padding-left: 0;">
                                <% if (doctor.surveyName && doctor.surveyName.length) { %>
                                    <% doctor.surveyName.forEach(name => { %>
                                        <li><%- name %></li>
                                    <% }); %>
                                <% } else { %>
                                    <li>No surveys available</li>
                                <% } %>
                            </ul>
                        </td>
                                              
                        
                        <td>
                            <a href="/doctors/edit/<%= doctor.id %>"><button class="edit-btn"><i class='bx bx-edit-alt'></i> Edit</button></a>
                            <form class="delete-style" action="/delete/<%= doctor.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this record?');" style="display: inline;">
                                <button class="delete-btn"><i class='bx bxs-message-square-minus'></i> Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </table>
            <% if (successMessage.length > 0) { %>
                <div class="flash-message success"><%= successMessage %></div>
                <% } %>
                <script>
                    setTimeout(() => {
                        document.querySelector('.flash-message.success').style.display = 'none';
                    }, 3000);
                </script>

        </div>
        <!-- Enhanced Success Message Box with Icons -->
        <div id="success-message-box" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); background-color: #fff; border: 2px solid #ccc; padding: 30px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2); z-index: 1000; width: 320px; border-radius: 10px;">
            <h3 style="text-align: center; margin-bottom: 20px;">Doctor Added Successfully!</h3>
            <p><strong>Username:</strong> <span id="success-username"></span></p>
            <p><strong>Password:</strong> <span id="success-password"></span></p>
            <div style="display: flex; justify-content: space-around; margin-top: 20px;">
                <!-- Copy to Clipboard Icon -->
                <i class="bx bx-copy-alt" onclick="copyToClipboard()" title="Copy to Clipboard"></i>
        
                <!-- Print Icon -->
                <i class="bx bx-printer" onclick="printCredentials()" title="Print"></i>
        
                <!-- OK Icon/Button -->
                <i class="bx bx-check-circle" onclick="closeMessageBox()" title="OK"></i>
            </div>
        </div>
        

        <div id="copied-animation" style="display:none; position:fixed; top:45%; left:50%; transform:translate(-50%, -50%); background-color: #28a745; color: #fff; padding: 10px 20px; border-radius: 5px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); z-index: 1001;">
            <i class='bx bx-check-circle' style="font-size: 20px; vertical-align: middle; margin-right: 8px;"></i>
            Copied to Clipboard!
        </div>
        




    </div>
<div class="column2">
        <div class="table-container" style="background-color: #fdfcfc;">
                        <!-- Manage Staff Section -->
                        <br><h2>Manage Staff</h2><br>
                        <form action="/staff" method="POST">
                            <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
                            <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>
                            <input type="password" id="password" name="password" placeholder="Password" required>
                            <input type="hidden" id="speciality" name="speciality" value="STAFF"> <!-- Set speciality to STAFF -->
                            <button type="submit"><i class='bx bx-user-check'></i> Add Staff</button>
                        </form>  
                        <hr class="spacer">
                        <hr>
                        <hr class="spacer">
                        <table>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Action</th>
                            </tr>
                            <% staff.forEach(member => { %>
                                <tr>
                                    <!-- Combine firstName and lastName to display full name -->
                                    <td><%= member.firstName + ' ' + member.lastName %></td>
                                    <td><%= member.username %></td>
                                    <td>
                                        <a href="/staff/edit/<%= member._id %>"><button class="edit-btn"><i class='bx bx-edit-alt'></i> Edit</button></a>
                                        <form class="delete-style" action="/staff/delete/<%= member._id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="delete-btn"><i class='bx bxs-message-square-minus'></i> Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </table>
                        
                       
        </div>
    </div>
</div>
    <script src="../public/script/script.js"></script>
    <script>
        let btn = document.querySelector('#btn');
        let sidebar = document.querySelector('.sidebar');

        btn.onclick = function() {
            sidebar.classList.toggle('active');
        };
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarLinks = document.querySelectorAll('.sidebar ul li a');

            function removeCurrentPageClasses() {
                sidebarLinks.forEach(link => {
                    link.classList.remove('CurrentPage');
                });
            }

            function setCurrentPageLink(path) {
                removeCurrentPageClasses();
                const currentPageLink = Array.from(sidebarLinks).find(link => {
                    const linkPath = new URL(link.href).pathname;
                    return linkPath === path;
                });
                if (currentPageLink) {
                    currentPageLink.classList.add('CurrentPage');
                }
            }

            const currentPath = window.location.pathname;
            setCurrentPageLink(currentPath);

            sidebarLinks.forEach(link => {
                link.addEventListener('click', function() {
                    const targetPath = new URL(link.href).pathname;
                    setCurrentPageLink(targetPath);
                });
            });
        });
    </script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const username = urlParams.get('username');
        const password = urlParams.get('password');

        if (username && password) {
            // Populate the success message box
            document.getElementById('success-username').textContent = username;
            document.getElementById('success-password').textContent = password;

            // Show the success message box
            document.getElementById('success-message-box').style.display = 'block';

            // Optionally clear the query parameters after displaying the message
            const url = new URL(window.location);
            url.searchParams.delete('username');
            url.searchParams.delete('password');
            window.history.replaceState({}, document.title, url);
        }
    });

    function closeMessageBox() {
        document.getElementById('success-message-box').style.display = 'none';
    }

    function copyToClipboard() {
    const username = document.getElementById('success-username').textContent;
    const password = document.getElementById('success-password').textContent;
    const textToCopy = `Username: ${username}\nPassword: ${password}`;

    navigator.clipboard.writeText(textToCopy).then(() => {
        // Show the copied animation
        const copiedAnimation = document.getElementById('copied-animation');
        copiedAnimation.style.display = 'block';

        // Hide the animation after 2 seconds
        setTimeout(() => {
            copiedAnimation.style.display = 'none';
        }, 2000);
    }, (err) => {
        console.error('Error copying text: ', err);
    });
}

    function printCredentials() {
        const username = document.getElementById('success-username').textContent;
        const password = document.getElementById('success-password').textContent;
        const printContent = `
            <div style="text-align: center;">
                <h3>Provider Details</h3>
                <p><strong>Username:</strong> ${username}</p>
                <p><strong>Password:</strong> ${password}</p>
            </div>
        `;

        const printWindow = window.open('', '', 'height=400,width=600');
        printWindow.document.write('<html><head><title>Print Credentials</title>');
        printWindow.document.write('</head><body>');
        printWindow.document.write(printContent);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    }
</script>
